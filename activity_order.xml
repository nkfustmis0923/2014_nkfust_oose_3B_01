<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:padding="5sp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰色拉鍊針織領大衣(數量): "
            android:textSize="20sp" />


        <EditText
            android:id="@+id/GrayC1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="230dp" android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/accountLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     針織領灰色大衣(數量): "
            android:textSize="20sp" />


        <EditText
            android:id="@+id/GrayC2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="230dp" android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pwdlinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                    尼龍大衣(數量): "
            android:textSize="20sp" />


        <EditText
            android:id="@+id/Nylon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="230dp" android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                   雙色 T 恤(數量):"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/TShirt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="230dp" android:textSize="12sp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="        黑色車線丹寧褲(數量): "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Jeans"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:width="230dp" android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="訂購" android:width="100dp"/>



    </LinearLayout>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/log"
    />


</LinearLayout>